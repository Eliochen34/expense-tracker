<div class="container">
  <form action="/records" method="POST">
    <div class="d-flex mb-3">
      <div id="formHelp" class="form-text p-3 mb-3">*必填欄位</div>
      <div class="p-2 flex-grow-1">
        <h3 class="text-center">請輸入你的支出</h3>
      </div>
    </div>
    
    <div class="d-flex mb-3">
      <label for="name" class="form-label w-25 p-2 text-center">名稱*：</label>
      <input type="text" class="form-control p-2 flex-grow-1" id="name" aria-describedby="name" placeholder="名稱" name="name"
        required>
    </div>
    
    <div class="d-flex mb-3">
      <label for="date" class="form-label w-25 p-2 text-center">日期*：</label>
      <input type="date" class="form-control p-2 flex-grow-1" id="date" aria-describedby="date" placeholder="date"
        name="date" required>
    </div>
    
    <div class="d-flex mb-3">
      <label for="category" class="form-label w-25 p-2 text-center">類別*：</label>
      <select class="form-select p-2 flex-grow-1" aria-label="category" name="categoryId" id="category" required>
        <option selected disabled value="">選擇類別</option>
        {{#each categories}}
        <option value="{{this._id}}" {{#if this.selected}}selected{{/if}}>{{this.name}}</option>
        {{/each}}
      </select>
    </div>
    
    <div class="d-flex mb-5">
      <label for="amount" class="form-label w-25 p-2 text-center">金額*：</label>
      <input type="number" class="form-control p-2 flex-grow-1" id="amount" aria-describedby="amount" placeholder="金額"
        name="amount" required>
    </div>
    
    <div class="d-flex justify-content-center">
      <button type="submit" class="btn btn-warning m-3">新增支出</button>
      <a href="/" class="btn btn-outline-danger m-3">回上一頁</a>
    </div>
  </form>
</div>